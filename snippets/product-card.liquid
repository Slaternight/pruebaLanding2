<div class="product-card">

  <div class="product-card__image-container">
    <div class="product-card__image-wrapper">
      <img class="product-card__image" src="assets/{{ product.image | img_url: 'medium' }}" alt="{{ product.title }}">
    </div>
  </div>

  <div class="product-card__details">
    <div class="product-card__name-price">
      <h3 class="product-card__title">{{ product.title }}</h3>
      <p class="product-card__price">${{ product.price | money_without_trailing_zeros }}</p>
      <p class="product-card__tags">
        {% for tag in product.tags %}
          {{ tag }}{% unless forloop.last %}, {% endunless %}
        {% endfor %}
      </p>
    </div>
    <button class="product-card__add-to-cart">
      <svg xmlns="http://www.w3.org/2000/svg" class="product-card__cart-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-1.3 5.2a1 1 0 001 1.3h11a1 1 0 001-1.3L17 13M9 21h.01M15 21h.01" />
      </svg>
    </button>
  </div>
</div>