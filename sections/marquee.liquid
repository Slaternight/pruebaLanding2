{% assign icon = hero.marquee_icon | asset_url %}
<div class="hero-marquee">
  <div class="hero-marquee__overlay hero-marquee__overlay--left"></div>
  <div class="hero-marquee__overlay hero-marquee__overlay--right"></div>
  <div class="hero-marquee__track">
    {% for i in (1..20) %}
      {% for text in hero.marquee_text %}
        <span class="hero-marquee__item">
          <img src="/assets/{{ icon }}" alt="icon" class="hero-marquee__icon" />
          {{ text }}
        </span>
      {% endfor %}
    {% endfor %}
  </div>
</div>
