{% assign header_settings = settings['header'].settings %}
<header class="header backdrop-blur-lg">
  <div class="header__content">
    <!-- Logo -->
    <div class="header__logo">
        <a href="{{ header_settings.logo_link }}"><img src="/assets/{{ header_settings.logo_image }}" alt="{{ header_settings.logo_alt }}" /></a>
    </div>

    <!-- Payment Section -->
    <div class="header__crypto">
      <span>{{ header_settings.crypto_span }}</span>
      <div class="header__coins">
         {% for icon in header_settings.crypto__icons %}
    <img src="/assets/{{ icon }}" alt="{{ icon | split: '.' | first | capitalize }}">
  {% endfor %}
      </div>
    </div>

    <!-- Nav & Cart -->
    <div class="header__actions">
      <nav class="header__nav">
         {% for link in header_settings.nav_links %}
      <a href="{{ link.url }}">{{ link.label }}</a>
    {% endfor %}
      </nav>
       {% if header_settings.cart_enabled %}
      <button class="header__cart" aria-label="Cart">
        ğŸ›’
      </button>
       {% endif %}
    </div>
  </div>
</header>

